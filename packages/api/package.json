{
  "name": "@pairup/api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "predev": "yarn run generate",
    "prebuild": "yarn run generate",
    "generate": "yarn generate:prisma && yarn generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "cross-env GENERATE=true cross-env DOTENV_CONFIG_PATH=.env.example ts-node --require dotenv/config --transpile-only -P nexus.tsconfig.json ./src/graphql/schema.ts",
    "prisma:migrate": "yarn prisma migrate dev --preview-feature",
    "prisma:studio": "prisma studio"
  },
  "dependencies": {
    "@pairup/shared": "1.0.0",
    "@prisma/client": "^3.8.1",
    "express": "^4.17.2",
    "graphql": "15.8.0",
    "nexus": "^1.1.0",
    "nexus-prisma": "^0.35.0",
    "postmark": "^2.8.1",
    "urql": "^2.0.6"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "prisma": "^3.8.1",
    "ts-node": "^10.4.0"
  },
  "prisma": {
    "schema": "src/db/schema.prisma"
  }
}
