{
  "name": "pairup--root",
  "version": "0.0.0",
  "private": true,
  "description": "Monorepo for PairUp",
  "author": "Companion Studio ltd",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "cms:start": "yarn workspace @pairup/cms start",
    "cms:build": "yarn workspace @pairup/cms build",
    "cms:deploy": "yarn workspace @pairup/cms deploy",
    "cms:deploy-graphql": "yarn workspace @pairup/cms deploy:graphql",
    "cms:full-deploy": "yarn cms:deploy && yarn cms:deploy-graphql && yarn web:generate",
    "eslint": "eslint --cache --cache-location=node_modules/.cache/.eslintcache --fix",
    "lint": "yarn run eslint . --ext .js,.jsx,.ts,.tsx",
    "postinstall": "patch-package",
    "prettier:write": "prettier --write .",
    "prettier:check": "prettier --check .",
    "start:ci": "INSECURE_AUTH=true yarn run web:start",
    "test": "yarn test:e2e && yarn test:unit",
    "test:e2e": "cypress open",
    "test:unit": "jest",
    "typecheck": "concurrently --raw yarn:typecheck:*",
    "typecheck:app": "tsc --noEmit -p ./tsconfig.json",
    "typecheck:cypress": "tsc --noEmit -p ./cypress/tsconfig.json",
    "web:dev": "yarn workspace @pairup/web dev",
    "web:build": "yarn workspace @pairup/web build",
    "web:generate": "yarn workspace @pairup/web generate",
    "web:prisma:migrate": "yarn workspace @pairup/web prisma:migrate",
    "web:prisma:studio": "yarn workspace @pairup/web prisma:studio",
    "web:start": "yarn workspace @pairup/web start",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-typescript": "^7.13.0",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@graphql-codegen/cli": "1.21.4",
    "@graphql-codegen/near-operation-file-preset": "^1.18.0",
    "@graphql-codegen/plugin-helpers": "^1.18.4",
    "@graphql-codegen/typed-document-node": "^1.18.5",
    "@graphql-codegen/typescript": "^1.22.0",
    "@graphql-codegen/typescript-operations": "1.17.16",
    "@graphql-codegen/typescript-urql": "^2.0.5",
    "@studiocompanion/scripts": "^1.1.0",
    "@testing-library/cypress": "^8.0.0",
    "@types/common-tags": "^1.8.0",
    "@types/cookie-session": "^2.0.42",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.6.1",
    "@types/passport": "^1.0.6",
    "@types/react": "^17.0.6",
    "@types/slug": "^5.0.0",
    "common-tags": "1.8.0",
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "cypress": "^7.4.0",
    "eslint-plugin-cypress": "^2.11.3",
    "husky": "^7.0.1",
    "jest": "^27.0.1",
    "lint-staged": ">=10",
    "next-prisma-plugin": "^0.1.1",
    "patch-package": "^6.4.7",
    "prisma": "^2.29.0",
    "ts-jest": "^27.0.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0
      ]
    }
  }
}
