{
  "name": "pairup--root",
  "version": "0.0.0",
  "private": true,
  "description": "Monorepo for PairUp",
  "author": "Companion Studio ltd",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "preconstruct": {
    "packages": [
      "packages/shared"
    ]
  },
  "scripts": {
    "cms:start": "yarn workspace @pairup/cms start",
    "cms:build": "yarn workspace @pairup/cms build",
    "cms:deploy": "yarn workspace @pairup/cms deploy",
    "eslint": "eslint --cache --cache-location=node_modules/.cache/.eslintcache --fix",
    "lint": "yarn run eslint . --ext .js,.jsx,.ts,.tsx",
    "native:android": "yarn workspace @pairup/native android",
    "native:ios": "yarn workspace @pairup/native ios",
    "postinstall": "patch-package && preconstruct dev",
    "preconstruct:dev": "preconstruct dev",
    "preconstruct:build": "preconstruct build",
    "prettier:write": "prettier --write .",
    "prettier:check": "prettier --check .",
    "test": "yarn test:ts && yarn test:unit",
    "test:ts": "tsc --noEmit",
    "test:unit": "jest",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-typescript": "^7.13.0",
    "@babel/runtime": "^7.12.5",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^13.1.0",
    "@graphql-codegen/cli": "^2.2.0",
    "@graphql-codegen/near-operation-file-preset": "^2.1.4",
    "@graphql-codegen/plugin-helpers": "^1.18.4",
    "@graphql-codegen/typed-document-node": "^2.2.2",
    "@graphql-codegen/typescript": "^1.22.0",
    "@graphql-codegen/typescript-operations": "2.1.4",
    "@graphql-codegen/typescript-urql": "^2.0.5",
    "@preconstruct/cli": "^2.1.4",
    "@react-native-community/eslint-config": "^2.0.0",
    "@studiocompanion/scripts": "^1.1.0",
    "@types/common-tags": "^1.8.0",
    "@types/cookie-session": "^2.0.42",
    "@types/jest": "^27.0.1",
    "@types/node": "^15.6.1",
    "@types/passport": "^1.0.6",
    "@types/passport-local": "^1.0.34",
    "@types/react": "^17.0.6",
    "@types/react-native": "^0.66.4",
    "@types/react-test-renderer": "^17.0.1",
    "@types/slug": "^5.0.0",
    "@types/validator": "^13.6.3",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "babel-jest": "^26.6.3",
    "common-tags": "1.8.0",
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.14.0",
    "husky": "^7.0.2",
    "jest": "^27.0.1",
    "lint-staged": ">=10",
    "metro-react-native-babel-preset": "^0.66.2",
    "next-prisma-plugin": "^0.1.1",
    "patch-package": "^6.4.7",
    "prisma": "^2.29.0",
    "react-test-renderer": "17.0.2",
    "sanity-codegen": "^0.9.5",
    "ts-jest": "^27.0.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.4.4"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0
      ]
    }
  },
  "packageManager": "yarn@3.1.1"
}
